{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/test-helpers/**"
  ]
}
